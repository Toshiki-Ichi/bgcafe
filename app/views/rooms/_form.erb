<%= form_with model: @room, local: true do |f| %>
	<div class='room-form__field'>
	 <p>クリックしてファイルをアップロード</p>
			<%= f.file_field :image_rooms, id:"item-image" %>
			 <label for="item-image">画像をアップロード</label>
	</div>
	<div class='room-form__field'>
		<%= f.label :name, 'ルーム名', class: '' %>
					<%= f.text_field :room_name, class: '', placeholder: '新規ルーム名を入力してください' %>

	</div>
	
	<div class='room-form__field'>
		<label for='room_creator'>ルーム作成者</label>
		<%= f.text_field :orner, class: '', placeholder: 'ルーム作成者の名前を入力してください' %>
	</div>
	
	<div class='room-form__field'>
	<label for='room_creator'>連絡先</label>
	<%= f.text_field :contact, class: '', placeholder: 'ルームに関連するSNSのURL（discord等）を入力してください' %>
</div>

	<%= f.submit 'ルーム作成', class: '' %>
<% end %>