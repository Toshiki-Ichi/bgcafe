<body>
<h1>ゲームの詳細</h1>
<%= link_to "ルームに戻る", room_path(@room) %></br>
<%= link_to "ゲーム一覧に戻る", room_user_games_path(@room) %></br>
<%= link_to "メンバー一覧に戻る", room_users_path(@room) %></br>

<div class="game_top">
<div class="show_user">
  <div class="show_user_content">
        <div class="game_name"><%= @user.nickname %></div>
        <div class="game_image"><%= @user.my_image.attached? ? image_tag(@user.my_image) : '<画像がありません>'.html_safe %></div>
				<div class="user_career"><%= "ゲーム歴：#{@user.career&.name || 'なし'}" %></div>
				<div class="user_likes"><%= "好き：#{@user.likes.presence || 'なし'}" %></div>
				<div class="user_weakness"><%= "苦手：#{@user.weakness.presence || 'なし'}" %></div>
        <div class="user_sns"><%= @user.sns.present? ? "SNS:#{@user.sns}" : 'SNS:なし' %></div>
        <div class="user_note"><%= raw @user.note %></div>
  </div>
</div>

<h2><%= "#{@user.nickname}の登録したゲーム" %></h2>
<% @games.each do |game| %>
<div class="show_game_content">

	<div class="game_name"><%= game.game_name %></div>
	<div class="game_image"><%= image_tag game.image_games if game.image_games.attached? %></div>
	<div class="game_text">
  	<div class="game_capacity"><%= "参加可能人数:#{game.capacity.name}" %></div>
	<div class="game_time"><%= "所要時間目安:#{game.require_time.name}" %></div>
	<div class="game_rule"><%= raw game.rule %></div>
	</div>
	</div>
	<% end %>

</div>
</body>